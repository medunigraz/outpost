[Unit]
Description=%I - Recording Upload Server

[Service]
Type=simple
Environment=DJANGO_SETTINGS_MODULE=outpost.django.settings
Environment=DJANGO_LOCAL_CONFIGURATION=/etc/django/%i.py
WorkingDirectory=/var/www/outpost/%i
User=www-data-api
ExecSearchPath=/var/www/outpost/%i/bin:/usr/bin:/bin
ExecStart=python3 -m django recordinguploadserver
UMask=0017

[Install]
WantedBy=outpost@%i.target
