[Unit]
Description=%I - Celery Worker

[Service]
Type=simple
Environment=DJANGO_LOCAL_CONFIGURATION=/etc/django/%i.py
WorkingDirectory=/var/www/outpost/%i
User=www-data-api
ExecSearchPath=/var/www/outpost/%i/bin:/usr/bin:/bin
ExecStart=python3 -m celery -A outpost.django.celery worker -E --loglevel=WARNING -n 'default@%i' --autoscale=10,3 -Q default
UMask=0027

[Install]
WantedBy=outpost@%i.target
