[Unit]
Description=%I - Celery Beat

[Service]
Type=simple
Environment=DJANGO_LOCAL_CONFIGURATION=/etc/django/%i.py
WorkingDirectory=/var/www/outpost/%i
User=www-data-api
ExecStart=/bin/sh -c "/var/www/outpost/%i/bin/python3 -m celery beat -A outpost.django.celery --loglevel=WARNING -s /var/lib/celery/%i/beat.state --pidfile /var/lib/celery/%i/beat.pid"
UMask=0027

[Install]
WantedBy=outpost@%i.target
